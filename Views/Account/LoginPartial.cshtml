
<div class="l_o hidden-xs hidden-sm">
    <img alt="TramHuong" src="~/Public/images/user/user.png" />
    <div class="box_log">
        @if (Session["UserName"] != null)
        {
            <div class="login">
                <a href="@Url.Action("Profile", "UserAccount", new {})">Tài Khoản</a>
            </div>
            <div class="res">
                @Html.ActionLink("Đăng Xuất", "Logout", "Account")
            </div>
        }
        else
        {
            <div class="login">
                <a href="@Url.Action("Login", "Account", new {})">Đăng nhập</a>
            </div>
            <div class="res">
                <a href="@Url.Action("Register", "Account", new {})">Đăng ký</a>
            </div>
        }

    </div>
</div>